<%= simple_form_for :rule, url: create_rule_path(@project), remote: true do |f| %>
  <fieldset>
    <%= f.label :starting_job_id %>
    <%= f.select :starting_job_id, @project.jobs.pluck(:alias) %>
  </fieldset>
  <fieldset>
    <%= f.label :field %>
    <%= f.select :field, @fields, { include_blank: true } %>
  </fieldset>
  <fieldset>
    <%= f.label :operator %>
    <%= f.select :operation, @operators, { include_blank: true } %>
  </fieldset>
  <fieldset>
    <%= f.label :value %>
    <%= f.text_field :value %>
  </fieldset>
  <fieldset>
    <%= f.label :ending_job_id %>
    <%= f.select :ending_job_id, @project.jobs.pluck(:alias) %>
  </fieldset>
  <%= f.submit %>
<% end %>
